{
  "name": "top20-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "compile": "tsc",
    "start": "next start",
    "lint": "eslint ./src/",
    "clean": "eslint --fix ./src; prettier --write \"./src/**/*.+(ts|tsx|js|jsx|json|yml|yaml|css|scss|md|vue)\"",
    "coverage": "jest test --coverage --coverageDirectory=coverage --watchAll=false",
    "test": "jest --watch"
  },
  "dependencies": {
    "@chakra-ui/clickable": "^1.1.7",
    "@chakra-ui/icons": "^1.0.15",
    "@chakra-ui/react": "^1.6.6",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@toplast/lastfm": "^0.1.5",
    "express-validator": "^6.12.1",
    "formik": "^2.2.9",
    "framer-motion": "^4.1.17",
    "next": "^11.1.0",
    "next-connect": "^0.10.2",
    "next-i18next": "^8.6.0",
    "node-fetch": "^2.6.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-error-boundary": "^3.1.3",
    "react-ga": "^3.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@emotion/jest": "^11.3.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.0",
    "@types/jest": "^26.0.23",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "17.0.19",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "babel-jest": "^27.0.5",
    "eslint": "^7.32.0",
    "eslint-config-next": "11.0.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-unused-imports": "^1.1.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.5",
    "next-router-mock": "^0.2.2",
    "node-mocks-http": "^1.10.1",
    "npm-force-resolutions": "0.0.10",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "src/pages/_app.tsx",
      "src/pages/_document.tsx",
      "src/pages/index.tsx",
      "src/pages/about.tsx"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "globalSetup": "<rootDir>/jest/globalSetup.js",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup/emotion.js",
      "<rootDir>/jest/setup/i18next.js",
      "<rootDir>/jest/setup/testing-library.js"
    ],
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss)$": "identity-obj-proxy",
      ".+\\.(png|jpg|ttf|woff|woff2)$": "<rootDir>/jest/modules/images.js"
    },
    "roots": [
      "./src"
    ],
    "testEnvironment": "jsdom",
    "verbose": true
  }
}
