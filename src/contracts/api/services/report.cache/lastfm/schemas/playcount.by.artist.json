{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Playcount by Artist Report Schema (last.fm)",
  "description": "The specification for the playcount by artist report data.",
  "definitions": {
    "validString": {
      "type": "string",
      "maxLength": 255
    },
    "trueConstant": {
      "type": "boolean",
      "const": true
    }
  },
  "type": "object",
  "minProperties": 6,
  "additionalProperties": false,
  "properties": {
    "albums": {
      "type": "array",
      "maxItems": 0
    },
    "artists": {
      "type": "array",
      "maxItems": 0
    },
    "playCountByArtist": {
      "type": "object",
      "minProperties": 3,
      "additionalProperties": false,
      "properties": {
        "status": {
          "minProperties": 3,
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "complete": {
              "$ref": "#/definitions/trueConstant"
            },
            "steps_total": {
              "type": "number"
            },
            "steps_complete": {
              "type": "number"
            }
          }
        },
        "created": {
          "$ref": "#/definitions/validString"
        },
        "content": {
          "type": "array",
          "maxItems": 20,
          "items": {
            "type": "object",
            "minProperties": 3,
            "additionalProperties": false,
            "properties": {
              "name": {
                "$ref": "#/definitions/validString"
              },
              "playcount": {
                "type": "number"
              },
              "fetched": {
                "$ref": "#/definitions/trueConstant"
              },
              "albums": {
                "type": "array",
                "uniqueItems": true,
                "maxItems": 1000,
                "items": {
                  "type": "object",
                  "minProperties": 3,
                  "additionalProperties": false,
                  "properties": {
                    "name": {
                      "$ref": "#/definitions/validString"
                    },
                    "playcount": {
                      "type": "number"
                    },
                    "fetched": {
                      "$ref": "#/definitions/trueConstant"
                    },
                    "tracks": {
                      "type": "array",
                      "maxItems": 1000,
                      "items": {
                        "type": "object",
                        "minProperties": 3,
                        "additionalProperties": false,
                        "properties": {
                          "name": {
                            "$ref": "#/definitions/validString"
                          },
                          "rank": {
                            "type": "number"
                          },
                          "fetched": {
                            "$ref": "#/definitions/trueConstant"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "tracks": {
      "type": "array",
      "maxItems": 0
    },
    "image": {
      "type": "array",
      "maxItems": 4,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "minProperties": 2,
        "additionalProperties": false,
        "properties": {
          "size": {
            "$ref": "#/definitions/validString"
          },
          "#text": {
            "$ref": "#/definitions/validString"
          }
        }
      }
    },
    "playcount": {
      "type": "number"
    }
  }
}
